rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // LOCKED DOWN: Only authenticated users (Anonymous or Signed In) can access
    
    // Clipboard Items
    match /clipboardItems/{document} {
      allow read, write: if request.auth != null;
    }

    // Pairings
    match /pairings/{document} {
      allow read, write: if request.auth != null;
    }

    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
